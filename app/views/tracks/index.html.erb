<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Album artist</th>
    <th>Track no</th>
    <th>Composer</th>
    <th>Total time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= track.id %></td>
    <td><%= track.name %></td>
    <td><%= track.artist_id %></td>
    <td><%= track.album_id %></td>
    <td><%= track.album_artist %></td>
    <td><%= track.track_no %></td>
    <td><%= track.composer %></td>
    <td><%= track.total_time %></td>
    <td><%= link_to 'Show', track %></td>
    <td><%= link_to 'Edit', edit_track_path(track) %></td>
    <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

