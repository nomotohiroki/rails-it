<div class="container">
<div class="row">
  <div class="span3">
    <ul class="nav nav-tabs nav-stacked" id="artists">
    <% for artist in @artists %>
      <li><a href="javascript:void(0);" id="artist-<%= artist.id %>"><%= artist.name %></a></li>
    <% end %>
    </ul>
  </div>
  <div class="span4" id="albumBlock">
    <% for artist in @artists %>
      <ul class="nav nav-tabs nav-stacked affix span4" style="display: none; height: 80%; overflow: auto;" id="albums-<%= artist.id %>">
        <% for album in artist.albums %>
          <li><a href="javascript:void(0);" id="album-<%= album.id %>">
            <% if album.name == nil %>
              Not In Album Tracks
            <% else %>
              <%= album.name %>
            <% end %>
          </a></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="span5" id="trackBlock">
    <% for artist in @artists %>
      <% for album in artist.albums %>
        <ul class="nav nav-tabs nav-stacked affix span5" style="display: none; height: 80%; overflow: auto;" id="tracks-<%= album.id %>">
          <% for track in album.tracks %>
            <li><a href="javascript:void(0);" onclick=""><%= track.name %></a></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
</div>
